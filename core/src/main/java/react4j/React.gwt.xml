<module>
  <inherits name='org.realityforge.braincheck.BrainCheck'/>
  <inherits name='jsinterop.annotations.Annotations'/>
  <inherits name='elemental2.core.Core'/>
  <inherits name='react4j.annotations.Annotations'/>

  <source path='' includes='*.java'/>

  <public path='public' includes='*'/>

  <!--
    These properties are all defined in react4j.ReactConfig
    See that class for a better understanding of what these properties do.
  -->

  <define-property name='react4j.environment' values='development,production'/>
  <set-property name='react4j.environment' value='production'/>

  <define-property name='react4j.enable_component_names' values='true,false'/>
  <set-property name='react4j.enable_component_names' value='false'/>

  <define-property name='react4j.check_invariants' values='true,false'/>
  <set-property name='react4j.check_invariants' value='false'/>

  <define-property name='react4j.check_component_state_invariants' values='true,false'/>
  <set-property name='react4j.check_component_state_invariants' value='false'/>

  <define-property name='react4j.minimize_prop_keys' values='true,false'/>
  <set-property name='react4j.minimize_prop_keys' value='true'/>

  <define-property name='react4j.validate_prop_values' values='true,false'/>
  <set-property name='react4j.validate_prop_values' value='false'/>
</module>
