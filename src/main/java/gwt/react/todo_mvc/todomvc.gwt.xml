<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='todomvc'>
    <inherits name='com.google.gwt.user.User' />
    <inherits name="com.google.gwt.resources.Resources" />
    <!-- This next line is our customized module -->
    <inherits name="gwt.react.ReactExt" />
    <inherits name="gwt.react_router.ReactRouter" />

    <set-property name="user.agent" value="safari"/>
    <set-property name="jre.checks.checkLevel" value="MINIMAL" />

    <entry-point class='gwt.react.todo_mvc.client.App' />

    <source path='client' />

    <add-linker name="xsiframe"/>
    <set-configuration-property name="devModeRedirectEnabled" value="true"/>
    <set-property name="compiler.useSourceMaps" value="true" />
</module>
